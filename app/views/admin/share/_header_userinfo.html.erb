<li class="dropdown user user-menu">
<!-- Menu Toggle Button -->
<a href="#" class="dropdown-toggle" data-toggle="dropdown">
  <!-- The user image in the navbar-->
  <%= image_tag "/assets/male.jpg" ,class: "user-image" ,alt: "User Image" %>

  <!-- hidden-xs hides the username on small devices so only the image appears. -->
  <% if current_user.present? %>
    <span class="hidden-xs"><%= current_user.name %></span>
  <% end %>
</a>
<ul class="dropdown-menu">
  <!-- The user image in the menu -->
  <li class="user-header">
  <%= image_tag "/assets/male.jpg" ,class: "img-circle" ,alt: "User Image" %>
  <% if current_user.present? %>
    <p>
    <%= current_user.name %>
    </p>
  <% end %>
  </li>
  <!-- Menu Body -->
  <li class="user-body">
  <div class="row">
    <div class="col-xs-4 text-center">
      <a href="#">Followers</a>
    </div>
    <div class="col-xs-4 text-center">
      <a href="#">Sales</a>
    </div>
    <div class="col-xs-4 text-center">
      <a href="#">Friends</a>
    </div>
  </div>
  <!-- /.row -->
  </li>
  <!-- Menu Footer-->
  <li class="user-footer">
  <div class="pull-left">
    <a href="#" class="btn btn-default btn-flat">Profile</a>
  </div>
  <div class="pull-right">
    <%= link_to 'Sign out', destroy_user_session_path, {:method=>:delete,:class=>"btn btn-default btn-flat"} %>
  </div>
  </li>
</ul>
</li>
<!-- Control Sidebar Toggle Button -->
<li>
<a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
</li>
