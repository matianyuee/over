
<style>
  td{
    text-align: center;

  }
  input{
    text-align: center;
  }

  /* ---- Some Resets ---- */

  p,
  table, caption, td, tr, th {
    margin:0;
    padding:0;
    font-weight:normal;
  }

  /* ---- Paragraphs ---- */

  p {
    margin-bottom:15px;
  }

  /* ---- Table ---- */

  table {
    border-collapse:collapse;
    margin-bottom:15px;
    width:90%;
  }

  caption {
    text-align:left;
    font-size:15px;
    padding-bottom:10px;
  }

  table td,
  table th {
    padding:5px;
    border:1px solid #fff;
    border-width:0 1px 1px 0;
  }

  thead th {
    background:#91c5d4;
  }

  thead th[colspan],
  thead th[rowspan] {
    background:#66a9bd;
  }

  tbody th,
  tfoot th {
    text-align:left;
    background:#91c5d4;
  }

  tbody td,
  tfoot td {
    text-align:center;
    background:#d5eaf0;
  }

  tfoot th {
    background:#b0cc7f;
  }

  tfoot td {
    background:#d7e1c5;
    font-weight:bold;
  }

  tbody tr.odd td {
    background:#bcd9e1;
  }
</style>
<style>
  #down{
    position: fixed;
    z-index: 1;
    opacity: 0.6;
    background-color: #8aa4af;
    height: 700px;
    width: 90%;
    margin-left: -15px;
  }
  #top{
    font-size: 20px;;
    width: 40%;
    background-color: #fff;
    position: absolute;
    z-index: 100;
    opacity: 1;
    margin-top: 15%;
    margin-left: 25%;
  }
</style>
<script>
  $(document).ready(function () {
    $('tbody tr').hover(function() {
      $(this).addClass('odd');
    }, function() {
      $(this).removeClass('odd');
    });
    $('form').submit(function(){
      if($("#bu").val() == "chose" || $("#bub").val()=="chose"){
        alert("请选择部门!")
        return false
      }
      if($("#bu").get(0).selectedIndex == $("#bub").get(0).selectedIndex){
        alert("部门重复!")
        return false

      }
      return  true

    });


  });
</script>

<div style="height: 700px;">
  <div id="down">
    <div id="top">
      <table class="table table-hover">
        <%=form_for("/merger")do %>
            <tr>
              <td>
                请选择被合并的部门:
              </td>
              <td><select class="form-control" name="selectname" id="bu">
                <option value='chose'>请选择部门</option>
                <%@departments.each do |d |%>
                    <option value='<%=d.id%>'><%=d.positionName%></option>
                <% end %>
              </select><br /></td>
            </tr>
            <tr>
              <td>请选择要合并到的部门:</td>
              <td><select class="form-control" name="selectinfo" id="bub">
                <option value='chose'>请选择部门</option>
                <%@departments.each do |d |%>
                    <option value='<%=d.id%>'><%=d.positionName%></option>
                <% end %>
              </select><br /></td>
            </tr>
            <Tr>
              <td colspan="2"><%=submit_tag "合并",:class=>"btn btn-info",:style=>"width:100%;" %></td>
            </Tr>
        <% end %>
      </table>
    </div>
  </div>
</div>