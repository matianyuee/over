<style>

  td{
    width:100px;
  }
  h2{
    margin-right: 150px;
    padding-bottom: 30px;
  }
</style>
<%=form_for(@resignationapplication ,url:{:controller => 'admin/resignation',:action =>'create'} ,html:{method: :post})do|f|%>
    <table>
      <h2 align="center">员工离职申请表</h2>
      <% @employees.each do |e|%>
      <tr>
        <td>姓名:</td>
        <td ><%= e.name%></td>
        <td>部门:</td>
        <td><%= e.positionName%></td>
        <td>职位:</td>
        <td><%= e.positionname%></td>
      </tr>

      <tr>
        <td>入职时间:</td>
        <td><%= e.created_at%></td>
      <% end%>
        <td colspan="2">合同到期日/试用到期日:</td>
        <td colspan="2"><%= f.date_field :contractexpirationdate%></td>
      </tr>
      <tr>
        <td colspan="6">
              <table>
                <tr>
                  <td><%= f.radio_button("reasonsforresignation", "辞职" ,:style => 'width:10px;') %>  辞职</td>
                  <td><%= f.radio_button("reasonsforresignation", "离职" ,:style => 'width:10px;') %> 离职</td>
                  <td><%= f.radio_button("reasonsforresignation", "辞退" ,:style => 'width:10px;') %> 辞退</td>
                  <td><%= f.radio_button("reasonsforresignation", "开除" ,:style => 'width:10px;') %>  开除</td>
                  <td><%= f.radio_button("reasonsforresignation", "合同到期" ,:style => 'width:10px;') %>  合同到期</td>
                </tr>
                <tr>
                  <td>本人因:</td>
                  <td colspan="4"><%=f.text_area :reasonforresignationinfo%><br>,特申请辞职，请公司领导给予批准</td>
                </tr>
                <tr>
                  <td>&nbsp;<br /></td>
                </tr>
                <tr>
                  <td>员工签字:</td><td><%=f.text_field :staffsignature%></td>
                </tr>
                <tr>
                  <TD>日期:</TD><td><%=f.date_field :staffsignaturedate %></td>
                </tr>
              </table>
              </td>
          </tr>
    </table>
    <%= f.submit '提交'%>
<% end %>
