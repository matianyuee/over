<style>
  #zhon {
    margin: 0 auto;
  }
</style>
<h4 align="center">应聘人员列表</h4>

<table id="zhon" border="1px">

  <tr>
    <td>姓名</td>
    <td>身份证号码</td>
    <td>专业</td>
    <td>联系电话</td>
    <td>操作</td>

  </tr>

  <% @employee_infos.each do |ar| %>
      <tr>
        <td><%= ar.name%></td>

        <td><%= ar.id_card_number%></td>
        <td><%= ar.major%></td>
        <td><%= ar.contact_phone%></td>
        <td>
          <%= link_to '详情信息', {:controller => 'admin/staffinfo', :action => 'show', :id => "#{ar.id}"}%>
        </td>
      </tr>
  <% end %>

</table>

